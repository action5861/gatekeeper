# =============================================================================
# Advertiser Service 환경변수 설정 예시
# =============================================================================

# JWT 보안 설정 (필수)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-must-be-32-chars-minimum
JWT_ALG=HS256
JWT_ISSUER=digisafe-api
JWT_AUDIENCE=digisafe-client
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 데이터베이스 설정 (필수 - 비동기 드라이버 사용)
DATABASE_URL=postgresql+asyncpg://admin:your_secure_password_123@localhost:5433/search_exchange_db

# CORS 설정
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# 외부 서비스 URL 설정 (게이트웨이용)
USER_SERVICE_URL=http://localhost:8005
ADVERTISER_SERVICE_URL=http://localhost:8007
AUCTION_SERVICE_URL=http://localhost:8002
PAYMENT_SERVICE_URL=http://localhost:8003
QUALITY_SERVICE_URL=http://localhost:8006
ANALYSIS_SERVICE_URL=http://localhost:8001
VERIFICATION_SERVICE_URL=http://localhost:8004

# 서비스 포트 설정
PORT=8007

# 로깅 설정
LOG_LEVEL=INFO

# 개발/프로덕션 모드
ENVIRONMENT=development
