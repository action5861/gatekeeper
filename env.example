# JWT 보안 설정
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# 서비스 URL 설정 (API Gateway용)
USER_SERVICE_URL=http://localhost:8001
ADVERTISER_SERVICE_URL=http://localhost:8002
AUCTION_SERVICE_URL=http://localhost:8003
PAYMENT_SERVICE_URL=http://localhost:8004
QUALITY_SERVICE_URL=http://localhost:8005
ANALYSIS_SERVICE_URL=http://localhost:8006
VERIFICATION_SERVICE_URL=http://localhost:8007

# API Gateway 설정
API_GATEWAY_PORT=8000

# 보안 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
MAX_REQUEST_SIZE=10485760  # 10MB

# 로깅 설정
LOG_LEVEL=INFO
